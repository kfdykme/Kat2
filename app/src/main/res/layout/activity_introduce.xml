<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="8dp">

       <TextView
           android:text="我可以做什么？"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="30sp"
           />
       <TextView
           android:text="1.帮你口头记笔记"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="23sp"/>
       <TextView
           android:text="喊我记笔记 \n说的话我都会记下来 \n说出'笔记完成'之后算是记完一个笔记 \n我会问要不要看刚才记的笔记 \n    yes 显示 \n    no 不显示"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="20sp"
           android:paddingLeft="30dp"/>
       <TextView
           android:text="2。查看所有记过的笔"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="23sp"/>
       <TextView
           android:text="开发相关"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="30sp"
           android:layout_marginTop="20dp"/>
       <TextView
           android:text="因为只是参赛作品，所以借用了'小黑'的样子"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="20sp"
           android:padding="8dp"/>
   </LinearLayout>


</ScrollView>
